<div class="container">
  <div class="row">
    <% if user_signed_in? %>
        <div class="col">
            <div>コメント投稿フォーム</div>
             <%= form_with model: [create, create_comment], url: public_create_create_comments_path(create.id), local: false do |f| %>
               <%= f.text_area :comment, rows: '5',placeholder: "コメントをここに", class: "w-100" %>
               <%= f.submit "送信", class:"btn btn-success"  %>
               <% end %><br>
        </div>
    <% end %>
  </div>
</div>