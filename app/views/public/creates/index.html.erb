
<%#　投稿一覧の画面   %>
<div class="container">
  <div class="row align-items-center">
    <div class="col">
       <h3><strong>作品一覧</strong> (全 <%= @total_creates %> 件)</h3><br>
    </div>
    <div class="col">
      <%= render 'public/searches/rank'  %>
    </div>
  </div>
  <%= link_to "ユーザー一覧", public_users_path, class: "btn btn-secondary" %>
  <br>
  <br>
  <div>
    <%= render 'admin/genres/tag-search' %>
  </div>

  <div class="row">
    <% @creates.each do |create| %>
    <div class="col-4 mb-4">
      <div class="card-group">
        <div class="card">
          <%= link_to public_create_path(create), class:"btn btn-outline-secondary"  do %>
            <%= image_tag create.get_image(250,250), class:"card-img-top" %>
          <div class="card-body">
             <%= create.name %>
          </div>
         <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-12 d-flex justify-content-center  mt-5 ">
      <%#= paginate @creates %>
    </div>
  </div><br>