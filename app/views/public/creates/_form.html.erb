<%= form_with model: create, url: public_creates_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :作品名 %>
    <%= f.text_field :name, class: 'form-control create_name' %>
  </div>
  <div class="form-group">
    <%= f.label :紹介 %>
    <%= f.text_area :introduction, class: 'form-control create_body' %>
  </div>
  <div class="mb-3">
    <%= f.label :image, "画像" %>
    <%= f.file_field :image, accept: "image/*", class:"form-control-file" %>
  </div>
  <div class="form-group">
    <%= f.submit "投稿", class: 'btn btn-success' %>
  </div>
<% end %>