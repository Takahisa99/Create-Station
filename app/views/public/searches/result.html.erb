<div class='container'>
  <div class=“row”>
        <div class="mb-3">
              <h2>検索結果:
              <% if @range == "User" %>
              全<%=  @users.count %>件
              <% else%>
              全<%=  @creates.count %>件
              <% end %>
              </h2>
        </div>
  </div>
</dvi>



<table class="table table-hover table-inverse">
  <%#--検索対象モデルがUserの時 -%>
  <% if @range == "User" %>
    <tbody>
      　<tr>
      　 <th></th>
      　 <th>名前</th>
      　 <th>紹介</th>
      　</tr>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to public_user_path(user) do %>
            <%= image_tag user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td>
            <%= link_to public_user_path(user) do %>
            <%= user.name %>
            <% end %>
          </td>
          <td><%= user.introduction%></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <%#--検索対象モデルがUserではない時(= 検索対象モデルがCreateの時) --%>
    <tbody>
        <tr>
         <th>作品</th>
      　 <th>作品名</th>
      　 <th>紹介</th>
      　 <th>投稿日時</th>
      　  </tr>
      <% @creates.each do |create| %>
        <tr>
          <td>
            <%= link_to public_create_path(create) do %>
            <%= image_tag create.get_image(100,100) %>
            <% end %>
          </td>
          <td>
            <%= link_to public_create_path(create) do %>
            <%= create.name %>
            <% end %>
          </td>
          <td><%= create.introduction %></td>
          <td><%= create.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>