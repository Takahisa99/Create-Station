<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-7'>
      <% if @user == current_user %>
      <h2 class="mt-4"><strong>マイページ</strong></h2><br>
      <% else @user.name %>
      <h2 class="mt-4"> <strong><%= @user.name %>さんのプロフィール</strong></h2>
      <% end %>


      <h4 class="my-3 ml-3"><strong>登録情報</strong></h4>
      <div class="my-3 ml-3"><%= image_tag @user.get_profile_image(100,100) %></div>
        <div class="mb-3">
          <% if @user == current_user %>
          <table class="table table-bordered">
            <thead>
              <tr>
                <td>氏名</td>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= @user.email %></td>
              </tr>
            </thead>
          </table>
         <% end %>

          <% if @user == current_user %>
          <%= link_to "編集する", edit_public_user_path, class:"btn btn-success btn-block" %><br>
          <% end %>
          <h4 class="my-3 ml-3"><strong>あなたの作品一覧</strong>(全 <%= @creates.count %> 件)</h4>


  <div class="row">
    <% @creates.each do |create| %>
    <div class="col-4 mb-4">
      <div class="card-group">
        <div class="card">
          <%= link_to public_create_path(create), class:"card-img-top" do %>
            <%= image_tag create.get_image(250,250), class:"card-img-top" %><br>
          <% end %>
          <div class="card-body">
            <%= create.name%><br>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
        <% if @user == current_user %>
          <h4 class="my-3 ml-3"><strong>あなたのお気に入り</strong>　<%#= link_to "一覧", public_orders_path, class:"btn btn-primary" %></h4>
        <% else @user.name %>
          <div><%= link_to "ユーザー一覧へ", public_users_path, class:"btn btn-success btn-block" %></div>
        <% end %>


        </div>
    </div>
  </div>
</div>