<div>
  <% if create.favorited_by?(current_user) %>
    <p>
      <%= link_to public_create_favorites_path(create), method: :delete, local: false  do %>
        ♥<%= create.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to public_create_favorites_path(create), method: :post,local: false  do %>
        ♡<%= create.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
</div>