<div class="container">
  <div class="row">
    <div class="col-12 mt-4 mb-4">
       <h3>フォロワー一覧</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row align-items-center">
    <div class="col">
      <table class='table'>
         <thead>
           <tr>
             <th>画像</th>
             <th>名前</th>
             <th colspan="3"></th>
             <th colspan="3"></th>
             <th colspan="3"></th>
           </tr>
         </thead>

      <% if @users.exists? %>
       <% @users.each do |user| %>
         <tbody>
           <tr>
            <td>
             <%= link_to public_user_path(user) do %>
             <%= image_tag user.get_profile_image(50,50) %></td>
             <% end %>
            <td><%= link_to public_user_path(user) do %>
                <%= user.name %>
                <% end %>
            </td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>

           </tr>
         </tbody>
       <% end %>
       <% else %>
          <h4>ユーザーはいません</h4>
       <% end %>
      </table>
    </div>
  </div>
</div>