    <%= render 'admin/users/error' , user: @user  %>

<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
      <h3 class="mt-4"><strong><%= @user.name %>さんの会員情報編集</strong></h3>

        <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local:true do |f| %>
        <div class="mb-3">
          <p>会員ID　　<%= @user.id %></p>
        </div>
        <div class="mb-3">
         <div class="row">
          <div class="col">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, class:"form-control", autofocus: true, autocomplete: "family-name" %>
          </div>
        </div>
      </div>


      <div class="mb-3">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class:"form-control", autocomplete: "email" %>
      </div>

      <div class="mb-3">
        <%= f.label :is_deleted, "会員ステータス　　" %>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "有効　　", value: false %>
        <%= f.radio_button :is_deleted, true%>
        <%= f.label :is_deleted, '退会', value: true %>
      </div>

      <div class="mb-3">
        <%= f.submit "変更を保存", class: "btn btn-success btn-block" do %>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>