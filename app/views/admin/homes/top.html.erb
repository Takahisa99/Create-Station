<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>

      <h2 class="mt-4"><strong>会員一覧</strong></h2><br>
  <%= link_to "一覧", admin_users_path, class: "btn btn-secondary" %>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>会員名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
           <tr>
             <td><%= user.id %></td>
             <td><%= link_to admin_user_path(user.id) do %>
                 <%= user.name %>
                 <% end %>
             </td>
             <td><%= user.email  %></td>
              <%# @total_order_items += order_detail.quantity %>
             <td>
               <% if user.is_deleted == true %>
                   <span class="text-secondary" ><strong>退会</strong></span>
               <% else %>
               　  <span class="text-success" ><strong>有効</strong></span>
               <% end %>
              </td>
            </tr>
            <tr>
              <td><%#= link_to create.created_at.strftime('%Y/%m/%d  %H:%M:%S'), admin_order_path(create) %></td>
              <td><%#= order.customer.full_name %></td>
              <td><%#= @total_order_items %></td>
              <td><%#= order.status_i18n %></td>
            </tr>
          <% end %>

        </tbody>
      </table>

  <div class="row">
    <div class="col-12 d-flex justify-content-center  mt-5 ">
     <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
    </div>
  </div><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>