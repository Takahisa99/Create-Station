<div class='container'>
  <div class=“row”>

       <h2 class="mt-4"><strong><%= @create.name %></strong></h2><br>

      <div class="row">
        <div class="col-md-8 offset-md-1">
          <div class="card-group">
              <%= link_to public_creates_path(@create), class:"card-img-top" do %>
                <%= image_tag @create.get_image(250,250), class:"card-img-top" %><br>
              <% end %>
          </div>
        </div>
      </div><br>

  <div class="border border-5">
    <div class="container-fluid border border-5">
      <div class="row">
        <div class="col bg-info text-center">
          <h3 class="text-white">作品紹介</h3>
        </div>
      </div>
    </div>

      <div class="container-fluid">
        <div class="row">
                 <h4 class="col">
                  <% if @create.user == current_user %>
                  <% else %>
                      <%= @create.user.name %>さんの投稿
                  <% end %>
                 </h4>
        </div>
      </div><br>
       <div class="container-fluid">
          <div class="row">
                 <div class="col-2">
                     <h4 class="bg-warning text-center">作品紹介</h4>
                 </div>
                 <div class="col-2"></div>
                 <div class="col-4">
                      <%= simple_format(@create.introduction) %>
                 </div>
          </div>
       </div>
       <div class="container-fluid">
          <div class="row">
                 <div class="col-2">
                    <h4 class="bg-warning text-center"> ジャンル</h4>
                 </div>
                 <div class="col-2"></div>
                 <div class="col-4">
                     <%= @create.genre.name %>
                 </div>
          </div>
       </div>
       <div class="container-fluid">
          <div class="row">
                 <div class="col-2">
                    <h4 class="bg-warning text-center">投稿日時</h4>
                 </div>
                 <div class="col-2"></div>
                 <div class="col-4">
                     <%= @create.created_at %>
                 </div>
          </div><br>
       </div>


  </div><br>

      <div class="col-5 mb-5">
        <div class="card-group">
          <div class="card">
<!--ログインしているユーザーのみ表示-->
            <%# if @create.user == current_user %>

<!--ログインしていないユーザー-->
            <%# else @create.user %>
                 <%= link_to "戻る", admin_creates_path, class:"btn btn-primary btn-block" %>
                 <%= link_to "ユーザーの情報", admin_user_path(@create.user), class:"btn btn-success btn-block" %>
                 <%= link_to "削除", admin_create_path(@create), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger btn-block" %>
            <%# end %>
          </div>
        </div>
      </div>

<!--いいね機能-->
     <%# if user_signed_in? %>

     <div class="col-4">
         いいね数
       <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
       <%= @create.favorites.count %>
     </div><br>
     <%# end %>


<!--コメント機能-->

      <div class = "create_comments create_comments border border-5">
       <%= render 'admin/create_comments/index', create: @create %>

      </div>




  </div>
</div>