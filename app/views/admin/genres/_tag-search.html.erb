<% if user_signed_in? %>
    <%= form_with url: public_searches_path , local: true, method: :get do |f| %>
        <div class="mb-3">
            <%= f.label :genre, "タグ　" %>
            <%= f.hidden_field :range, value: 'Genre' %>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => true, class:"form-control" %>
            <%= f.submit "検索", class: "btn btn-primary" %>
        </div>
    <% end %>
<% end %>