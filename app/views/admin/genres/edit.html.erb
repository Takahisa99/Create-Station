<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-4'>
      <h3 class="mt-4"><strong>ジャンル編集</strong></h3><br>

       <%= render 'admin/genres/error', genre: @genre%>

      <div class="mb-3">
        <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, local:true do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, class:"form-control" %><br>
        <%= f.submit "変更を保存", class:"btn btn-success btn-block" %>
      </div>

      <div class="mb-3">
        <%= link_to "削除", admin_genre_path(@genre), method: :delete, class:"btn btn-danger"%>
      </div>
      <% end %>
    </div>
  </div>
</div><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>